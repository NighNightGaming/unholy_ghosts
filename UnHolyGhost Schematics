UnHolyGhost Schematics

GameLoop:
	function start;
	function end;
	bool pause;
	function stop;
	Scene:
		width:100%
		height: 100%
		watchtime; 
	Objects:
		Ghost {
			bool host = false;
			revives = 3;
			timeLimit;
			watchtme;
			
			if watchtime = timeLimit
				gameloop.gameover();
			controller:
				a - left
				s - down
				d - right
				w - up
			gravity: none;

			if host {
				Possesed {
					player.lost() {
						revives -= 1;
						if revives = 0
							gameLoop.gameover();
					}

					kills;
					health;

					controller {
						a - left 
						d - right
						s - lower from platrom
						if cop? w: climb : w:jump;
					}
						
					weapon {
						switch(weapon)
						gun 
							attacks:
								shoot
								kick
								jump
						default //hands
							attacks: 
								punch 
								jump 
								kick
					gravity: normal
					}
				}
			}

			enemy {
				mourner {
					attacks
						punch
						kick
					health = x
					rate = 10s
					switch(possessed.kills) {
					 	case(5,6,7,8,9)
					 		mourner.rate = 5s
					 		copsOn = true
					}
				}
				cop {
					attacks
						punch
						shoot
						kick
					health = x
					rate = 15s
					switch(possessed.kills) {
					 	case(15,16,17,18,19)
					 		cop.rate = 5s
					 		callTheArmy = true
				}
				army{
					rate = 30s
					attacks
						bayounet
						shoot
						kick
						shield

				}
			}
					switch (possesed.kills)
						case(5 - 9)
							mourner.rate = 5s
						case(10 - 14)
							enemies,append(cop)
							cop.rate = 10s
						case(15)
							enemies.append(army)
							army.rate = 25s
						default
							enemies = (m)
	}
		
			

			
	